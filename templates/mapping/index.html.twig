{% extends 'base.html.twig' %}

{% block title %}Ski Club de Bogève et Viuz en Sallaz - Mapping{% endblock %}


{% block body %}
{% if content.type is defined %}
  <div class="container text-center">
      <div class="alert alert-{{content.type.name}}" role="alert">
        {{content.text}}
      </div>
  </div>
  <div class="clearfix">&nbsp;</div>
{% endif %}

<div class="container text-center">
<div class="row">
  <div class="col-12">
    <ul class="list-group">
    <li class="list-group-item list-group-item-success">Passage d'étoile</li>
    <li class="list-group-item list-group-item-primary">Session supplémentaire</li>
    <li class="list-group-item list-group-item-info">Course</li>
    </ul>
  </div>
  <div class="clearfix">&nbsp;</div>
  {% for date, sessions in datasessions %}
  <div class="col-12">
    <ul class="list-group">
    <li class="list-group-item list-group-item-secondary" aria-current="true">{{date}}</li>
    {% for id,session in sessions %}
    <li class="list-group-item 
            {% if sessions[id].test is defined and sessions[id].test==true %}list-group-item-success {% endif %} 
            {% if sessions[id].race is defined and sessions[id].race==true %}list-group-item-info {% endif %}
            {% if sessions[id].additional is defined and sessions[id].additional==true %}list-group-item-primary {% endif %}
            {% if sessions[id].cancel is defined and sessions[id].cancel==true %}list-group-item-danger{% endif %}">
    {{sessions[id].name|raw}}</li>
    {% endfor %}
  </ul>
  </div>
  <div class="clearfix">&nbsp;</div>
  {% endfor %}
</div>
  </div>



{% endblock %}
