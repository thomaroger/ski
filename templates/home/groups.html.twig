{% extends 'base.html.twig' %}

{% block title %}Ski Club de Bog√®ve et Viuz en Sallaz - Groupes{% endblock %}

{% block body %}
{% if content is defined %}
  <div class="container text-center">
      <div class="alert alert-{{content.type.name}}" role="alert">
        {{content.text}}
      </div>
  </div>
  <div class="clearfix">&nbsp;</div>
{% endif %}

<div class="container text-center">
<div class="row">
  {% for group in groups %}
  <div class="col-4">
    <ul class="list-group">
    <li class="list-group-item list-group-item-secondary" aria-current="true">{{group}}</li>
    {% for child in group.children %}
    <li class="list-group-item">{{child}}</li>
    {% endfor %}
  </ul>
  </div>
  {% endfor %}
</div>
  </div>



{% endblock %}
